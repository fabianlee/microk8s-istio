---
microk8s_version: "1.21/stable"

# wait for nginx enablement
microk8s_plugin_ingress_enable: false

# on Ubuntu focal, throws error on first run, so skipping
microk8s_plugin_helm3_enable: false

# false for virtualbox vm, where creating 'lo:microk8s' static IP will hang
microk8s_plugin_host_access_enable: false

# do not enable metal LB until additional IP is added
microk8s_plugin_metallb_enable: false

# configure these users with proper: group, permissions, ~/.kube/config
users: ['ubuntu'] # 'fabian' for virtualbox, 'ubuntu' for kvm/libvirt

# place in /etc/hosts of each
local_etc_hosts:
  # microk8s cluster nodes must see each other
  - ip: 192.168.122.210
    fqdn: microk8s-1
  - ip: 192.168.122.211
    fqdn: microk8s-2
  - ip: 192.168.122.212
    fqdn: microk8s-3
  # allows curl to MetalLB endpoints with proper host header
  - ip: 192.168.2.141
    fqdn: microk8s.local
  - ip: 192.168.2.142
    fqdn: microk8s-secondary.local
