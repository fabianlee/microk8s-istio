---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hello-v1-on-gateway-ingressgateway
spec:
  hosts: {{ ([primary_domain] + san_domains) | to_json }}
  gateways:
  - gateway-ingressgateway
  http:
  - match:
    - uri:
        exact: /hello
    route:
    - destination:
        host: helloworld
        port:
          number: 5000

