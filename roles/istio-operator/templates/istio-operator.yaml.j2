---
kind: Namespace
apiVersion: v1
metadata:
  name: istio-system
---
apiVersion: install.istio.io/v1alpha1
kind: IstioOperator
metadata:
  name: istio-control-plane
  namespace: istio-system

spec:
  profile: default
  revision: {{ istio_version | replace('.','-') }}

  addonComponents:
    kiali:
      enabled: false
    grafana:
      enabled: false
    prometheus:
      enabled: false
    pilot:
      enabled: true

  components:
    ingressGateways:
      - namespace: istio-system
        name: istio-ingressgateway
        enabled: true
        k8s:
          hpaSpec:
            minReplicas: 1
            maxReplicas: 1

#          overlays:
#            - kind: Service
#              name: istio-ingressgateway
#              patches:
#                - path: spec.loadBalancerIP
#                  value: 10.152.183.213
#                - path: spec.loadBalancerSourceRanges
#                  value: [ 10.0.0.0/8 ]
            
          service:
            ports:
            - name: status-port
              port: 15021
              protocol: TCP
              targetPort: 15021
            - name: http2
              nodePort: 32600
              port: 80
              protocol: TCP
              targetPort: 8080
            - name: https
              nodePort: 32601
              port: 443
              protocol: TCP
              targetPort: 8443
            - name: tcp
              port: 31400
              protocol: TCP
              targetPort: 31400
            - name: tls
              port: 15443
              protocol: TCP
              targetPort: 15443

      # second ingress for internal management traffic
      - namespace: istio-system
        name: istio-ingressgateway-mgmt
        enabled: true
        k8s:
          hpaSpec:
            minReplicas: 1
            maxReplicas: 1

          overlays:
            - kind: Service
              name: istio-ingressgateway-mgmt
              patches:
                - path: metadata.labels.istio
                  value: istio-ingressgateway-mgmt
            
          service:
            ports:
            - name: status-port
              port: 15021
              protocol: TCP
              targetPort: 15021
            - name: http2
              nodePort: 32700
              port: 80
              protocol: TCP
              targetPort: 8080
            - name: https
              nodePort: 32701
              port: 443
              protocol: TCP
              targetPort: 8443
            - name: tcp
              port: 31400
              protocol: TCP
              targetPort: 31400
            - name: tls
              port: 15443
              protocol: TCP
              targetPort: 15443



