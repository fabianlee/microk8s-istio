---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: nginx-on-gateway-ingressgateway
  namespace: nginx-ns
spec:
  hosts: {{ cert_domains_primary_ingress | to_json }}
  gateways:
  - default/gateway-ingressgateway
  http:
  - match:
    - uri:
        exact: /index.html
    route:
    - destination:
        # does not demand full qualifier
        # short name, 'nginx-service' would be sufficient
        host: nginx-service.nginx-ns.svc.cluster.local
        port:
          number: 8080

